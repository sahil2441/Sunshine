<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:defaultValue="@string/default_value"
        android:inputType="text"
        android:key="@string/key_preferences"
        android:singleLine="true"
        android:title="@string/title_preferences"></EditTextPreference>

    <ListPreference
        android:title="@string/units_label"
        android:key="@string/units_key"
        android:defaultValue="@string/units_metric"
        android:entries="@array/entries"
        android:entryValues="@array/entry_values" />


</PreferenceScreen>